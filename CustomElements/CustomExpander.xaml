<UserControl x:Class="CorpusSearchEngine.CustomElements.CustomExpander"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CorpusSearchEngine.CustomElements"
             mc:Ignorable="d" 
             MinHeight="60" MinWidth="150" Width="Auto">
    <Grid>
        <TextBox Name="Word" FontSize="20" Text=" " 
                           Margin="15,10,15,0" FontWeight="DemiBold" 
                           BorderThickness="0"
                           Foreground="#FAFAF5" Background="Transparent"></TextBox>
        <Expander Name="ExpanderTitle" Header="Word" FontSize="20" 
                           Margin="15,10,15,0" FontWeight="DemiBold" 
                           BorderThickness="0"
                           Foreground="#FAFAF5" Background="Transparent">
            <StackPanel Name="ExpanderStackPanel">
                <TextBox Name="A" FontSize="20" Text=" " 
                           Margin="15,10,15,0" FontWeight="DemiBold" 
                           BorderThickness="0"
                           Foreground="#FAFAF5" Background="Transparent"></TextBox>
            </StackPanel>
        </Expander>
    </Grid>
</UserControl>
