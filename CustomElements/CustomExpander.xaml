<UserControl x:Class="CorpusSearchEngine.CustomElements.CustomExpander"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CorpusSearchEngine.CustomElements"
             mc:Ignorable="d" 
             MinHeight="60" MinWidth="150" Width="Auto">
    <Grid>
        <TextBox Name="Word" FontSize="20" Text=" " 
                           Margin="15,0,15,0" FontWeight="DemiBold" 
                           BorderThickness="0"
                           Foreground="#FAFAF5" Background="Transparent"></TextBox>
        <Border Background="Transparent"
                    CornerRadius="20, 20, 20, 20" VerticalAlignment="Top">
            <Expander Name="ExpanderTitle" Header="Word" FontSize="20" 
                           Margin="0,10,0,10" FontWeight="DemiBold" 
                           BorderThickness="0"
                           Foreground="#FAFAF5" Background="Transparent">
                <StackPanel Name="ExpanderStackPanel">

                </StackPanel>
            </Expander>
        </Border>

    </Grid>
</UserControl>
